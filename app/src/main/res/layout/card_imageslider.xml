<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_pertanyaan"
    android:layout_width="144dp"
    android:layout_height="178dp"
    card_view:cardCornerRadius="12dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rvImage"
            android:layout_width="128dp"
            android:layout_height="156dp"
            android:scaleType="centerCrop"
            android:src="@drawable/judul_wattpad"
            card_view:shapeAppearanceOverlay="@style/RoundedImageView"/>

        <TextView
            android:id="@+id/rvText"
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/rvImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text="AFTER"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:outlineProvider="none"
            tools:ignore="InvalidId,TextSizeCheck" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>